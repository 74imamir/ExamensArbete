@model ExamensArbete.Models.Person
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>


<form action="/Simple/Edit" method="post">

    <div class="col-md-12">

        <div class="form-group">
            
            <input  type="hidden"  asp-for="Id" class="form-control" value="@Model.Id" />
            
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger" ></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" value="@Model.Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" value="@Model.Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">

            <a asp-action="Index" asp-controller="Simple" class="btn btn-primary btn-sm">Back</a>
            <input type="submit" value="Save" class="btn btn-primary btn-sm" />
        </div>

    </div>
</form>


