@model IEnumerable<ExamensArbete.Models.Person>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Simple">Add new person</a>
<br />
<br />

<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Action</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Simple" class="btn btn-success btn-sm">Edit</a>                 
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Simple" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

